{
    "name": "fnbr/webtool",
    "description": "FrameNet Brasil Web Annotation Tool",
    "license": "GPLv3",
    "config": {
        "platform": {
            "php": "7.3.5"
        },
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "keywords": [
        "framenet",
        "annotation",
        "frames",
        "constructions"
    ],
    "authors": [
        {
            "name": "Tiago Torrent",
            "email": "tiago.torrent@gmail.com"
        },
        {
            "name": "Ely Matos",
            "email": "admin@ematos.net"
        }
    ],
    "require": {
        "php": "7.3.*",
        "laravel/lumen-framework": "^6.0",
        "psr/log": "1.0.0",
        "phpmailer/phpmailer": "~6.0",
        "zendframework/zend-session": "2.9.*",
        "zendframework/zend-config": "2.6.*",
        "zendframework/zend-validator": "2.8.*",
        "zendframework/zend-captcha": "2.6.*",
        "latte/latte": "2.4.*"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "files": [
            "maestro/functions.php"
        ],
        "classmap": [
            "database/seeds",
            "database/factories",
            "maestro/manager.php",
            "maestro/interfaces",
            "maestro/database",
            "maestro/services",
            "maestro/mvc",
            "maestro/results",
            "maestro/persistence",
            "maestro/extensions",
            "maestro/security",
            "maestro/types",
            "maestro/ui",
            "maestro/utils",
            "app/UI",
            "app/Components",
            "app/Filters"
        ],
        "psr-4": {
            "App\\": "app/",
            "database\\": "maestro/database",
            "fnbr\\": "app/Modules"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "Manager::postAutoloadDump"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
